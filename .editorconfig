root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{md,markdown}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
indent_size = 2
insert_final_newline = false

[*.yml]
indent_size = 2
insert_final_newline = false

[*.sh]
indent_size = 2

[*.graphql]
indent_size = 2
